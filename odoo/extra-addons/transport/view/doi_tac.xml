<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Views -->
    <record id="doi_tac_form_view" model="ir.ui.view">
        <field name="name">doi.tac.form</field>
        <field name="model">doi.tac</field>
        <field name="arch" type="xml">
            <form class="oe_form_configuration">
                <sheet>
                    <group>
                        <group>
                            <label for="doitac" string="Đối tác"/>
                            <h1><field name="doitac" placeholder="Họ và tên" /></h1>
                        </group>

                        <group>
                            <field name="sodienthoai"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="diemnguon"/>
                        </group>
                        <group>
                            <field name="diemdich" />
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="dongia"/>
                        </group>
                        <group>
                            <field name="ghichu" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="doi_tac_search_view" model="ir.ui.view">
        <field name="name">bang.gia.search</field>
        <field name="model">doi.tac</field>
        <field name="arch" type="xml">
            <search string="Đối tác">
                <field name="doitac"/>
                <field name="sodienthoai"/>
                <field name="diemnguon"/>
                <field name="diemdich"/>
                <field name="dongia"/>
                <field name="ghichu"/>
            </search>
        </field>
    </record>
    <record id="doi_tac_list_view" model="ir.ui.view">
        <field name="name">doi.tac.list</field>
        <field name="model">doi.tac</field>
        <field name="arch" type="xml">
            <tree string="Đối tác">
                <field name="doitac" optional="show"/>
                <field name="sodienthoai" optional="show"/>
                <field name="diemnguon" optional="show"/>
                <field name="diemdich" optional="show"/>
                <field name="dongia" optional="show"/>
                <field name="ghichu" optional="show"/>
            </tree>
        </field>
    </record>


    <!-- Actions -->
    <!-- Actions Quy cách-->

    <record id="action_doi_tac_form" model="ir.actions.act_window">
        <field name="name">Đối tác</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">doi.tac</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="search_view_id" ref="doi_tac_search_view"/>
        <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('doi_tac_list_view')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('doi_tac_form_view')})]"/>
    </record>


    <!--menu item -->

    <menuitem id="doi_tac_menu"
              action="action_doi_tac_form"
              name="Đối tác"
              parent="transport.transport_menu_root"
              sequence="4"/>


</odoo>