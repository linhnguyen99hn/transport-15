<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Views -->
    <record id="kho_van_chuyen_form_view" model="ir.ui.view">
        <field name="name">kho.van.chuyen.form</field>
        <field name="model">kho.van.chuyen</field>
        <field name="arch" type="xml">
            <form class="oe_form_configuration">
                <sheet>
                    <group>
                        <group>
                            <field name="tenkho"/>
                        </group>
                        <group>
                            <field name="sodienthoai"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="ghichu"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="kho_van_chuyen_search_view" model="ir.ui.view">
        <field name="name">bang.gia.search</field>
        <field name="model">kho.van.chuyen</field>
        <field name="arch" type="xml">
            <search string="Kho vận chuyển">
                <field name="tenkho"/>
                <field name="sodienthoai"/>
                <field name="ghichu"/>
            </search>
        </field>
    </record>
    <record id="kho_van_chuyen_list_view" model="ir.ui.view">
        <field name="name">kho.van.chuyen.list</field>
        <field name="model">kho.van.chuyen</field>
        <field name="arch" type="xml">
            <tree string="Kho vận chuyển">
                <field name="tenkho" optional="show"/>
                <field name="sodienthoai" optional="show"/>
                <field name="ghichu" optional="show"/>
            </tree>
        </field>
    </record>


    <!-- Actions -->
    <!-- Actions Quy cách-->

    <record id="action_kho_van_chuyen_form" model="ir.actions.act_window">
        <field name="name">Kho vận chuyển</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">kho.van.chuyen</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="search_view_id" ref="kho_van_chuyen_search_view"/>
        <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('kho_van_chuyen_list_view')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('kho_van_chuyen_form_view')})]"/>
    </record>


    <!--menu item -->

    <menuitem id="kho_van_chuyen_menu"
              action="action_kho_van_chuyen_form"
              name="Kho vận chuyển"
              parent="transport.transport_menu_root"
              sequence="5"/>


</odoo>